# T-Trade 环境变量配置
# 复制此文件为 .env 并填入实际值

# IBKR 连接配置
IBKR_HOST=127.0.0.1
IBKR_PORT=7497          # 7497=TWS, 4001=Gateway
IBKR_CLIENT_ID=1
IBKR_TIMEOUT=30
IBKR_READONLY=true      # 第一阶段推荐只读

# 通知配置（可选，三选一）
# Telegram
NOTIFY_TELEGRAM_BOT_TOKEN=
NOTIFY_TELEGRAM_CHAT_ID=

# Discord
NOTIFY_DISCORD_WEBHOOK_URL=

# 日志配置
LOG_LEVEL=INFO

# 调试模式
DEBUG=false
DRY_RUN=true
